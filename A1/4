let opcao = parseInt(prompt("Escolha uma opção:\n1. Olá\n2. Ajuda\n3. Sair"));

switch (opcao) {
  case 1:
    console.log("Você escolheu Olá!");
    break;
  case 2:
    console.log("Você escolheu Ajuda.");
    break;
  case 3:
    console.log("Encerrando o programa...");
    break;
  default:
    console.log("Opção inválida.");
}
